[Unit]
Description=Start phenix web server
Requires=minimega.service 
After=minimega.service 

[Service]
Type=simple
Environment=PATH=/opt/phenix/bin:/opt/minimega/bin
Environment=PHENIX_STORE_ENDPOINT=bolt:///etc/phenix/store.bdb
WorkingDirectory=/phenix
ExecStart=/opt/phenix/bin/phenix ui --log.error-stderr --store.endpoint=${PHENIX_STORE_ENDPOINT}


[Install]
WantedBy=multi-user.target
